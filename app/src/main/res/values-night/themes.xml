<resources>
    <!-- Base application theme. -->
    <style name="Theme.Agatepedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@style/SearchViewAutoComplete</item>
        <item name="android:colorBackground">@color/black</item>
    </style>


    <style name="SearchViewAutoComplete" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchViewStyle">
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="ListStyleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListStyleText.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/black</item>
    </style>


    <style name="DetailTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailTextStyle.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="DetailTextStyle.Price">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>